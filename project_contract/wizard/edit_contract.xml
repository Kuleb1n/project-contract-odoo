<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="edit_name_contract_view_form" model="ir.ui.view">
        <field name="name">edit.name.contract.form</field>
        <field name="model">edit.name.contract</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="Changing the contract name">
                    <group>
                        <field name="new_name"/>
                    </group>
                </sheet>
                <footer>
                    <button name="update_contract_name" string="Update" type="object" class="btn-primary"
                            data-hotkey="q"/>
                    <button string="Cancel" special="cancel" data-hotkey="z" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>